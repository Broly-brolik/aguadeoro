        android:key="email_order_ready_body_en"
        android:persistent="true"
        android:title="Body" />
    <EditTextPreference
        android:defaultValue="Votre commande est prête"
        android:inputType="text"
        android:key="email_order_ready_subject_fr"
        android:persistent="true"
        android:title="Subject" />
