        <ImageView
            android:id="@+id/image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center|top"
            android:src="@android:drawable/ic_menu_gallery" />


    </LinearLayout>

</merge>